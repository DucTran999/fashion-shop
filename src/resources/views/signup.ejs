<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/images/pa_favicon.png" />
    <!-- STYLE CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Bootstrap latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Link themify icon -->
    <link rel="stylesheet" href="./css/themify-icons.css" />

    <!-- login-page style -->
    <link rel="stylesheet" type="text/css" href="./css/signup_style.css" />
    <title>Welcome to Atlana Shop</title>
  </head>
  <body>
    <header class="simple-header">
      <div class="container-md">
        <div class="row simple-header__row">
          <a href="/" class="back-home-btn">
            <span class="back-home-btn--icon ti-arrow-left"></span>
          </a>
          <a href="/" class="logo-link col-md-4">
            <img
              src="./images/util/shop_logo.png"
              alt="Shop logo"
              class="logo-link--img"
            />
          </a>
          <nav class="simple-header__navbar">
            <ul class="navbar-list">
              <li class="navbar-item">
                <a href="#help" class="navbar-item--link">
                  <span class="navbar-item--icon ti-help-alt"></span>
                  <span class="navbar-item--description"> Help centre</span></a
                >
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <main class="wrapper">
      <div
        class="wrapper__background"
        style="background-image: url('./images/sign_up/sign_up_bg.jpg')"
      ></div>
      <div class="wrapper__article">
        <div class="container-md">
          <div class="row justify-content-center">
            <div class="col-sm-10 col-md-12 col-lg-8 col-xxl-6">
              <div class="article-wrapper">
                <div
                  class="article-wrapper__banner"
                  style="
                    background-image: url('/images/sign_up/sign_up_bg.jpg');
                  "
                ></div>
                <div class="article-wrapper__form-side">
                  <form class="sign-up-form">
                    <span class="sign-up-form__header"
                      >Create your account</span
                    >
                    <div class="input-box">
                      <input
                        type="text"
                        id="username"
                        autocomplete="off"
                        required
                        class="input-box__field"
                      />
                      <label for="username" class="input-box__label"
                        >username</label
                      >
                      <span
                        id="username-msg"
                        class="announcement-box active"
                      ></span>
                    </div>
                    <div class="input-box">
                      <input
                        type="text"
                        id="email-signup"
                        autocomplete="off"
                        required
                        class="input-box__field"
                      />
                      <label for="email" class="input-box__label">email</label>
                      <span
                        id="email-msg"
                        class="announcement-box active"
                      ></span>
                    </div>
                    <div class="input-box">
                      <input
                        type="password"
                        id="enter-password"
                        required
                        autocomplete="off"
                        class="input-box__field"
                      />
                      <label for="password" class="input-box__label"
                        >password</label
                      >
                      <span
                        id="show-password-1"
                        class="input-box__show-password"
                        >show</span
                      >
                      <div class="state-bar">
                        <div class="state-bar__box1"></div>
                        <div class="state-bar__box2"></div>
                        <div class="state-bar__box3"></div>
                      </div>
                      <span
                        id="enter-password-msg"
                        class="announcement-box active"
                      ></span>
                    </div>
                    <div class="input-box">
                      <input
                        type="password"
                        id="re-enter-password"
                        required
                        autocomplete="off"
                        class="input-box__field"
                      />
                      <label for="re-enter-password" class="input-box__label"
                        >re-enter password</label
                      >
                      <span
                        id="show-password-2"
                        class="input-box__show-password"
                        >show</span
                      >
                      <span
                        id="re-enter-password-msg"
                        class="announcement-box active"
                      ></span>
                    </div>
                    <input
                      type="submit"
                      class="submit-btn sign-up-type"
                      value="Sign up"
                    />
                  </form>
                  <span class="sign-in-direction">
                    Already has an account?
                    <a href="/login" class="sign-in-direction__link"
                      >Sign in now!</a
                    >
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer class="footer-site">
      <div class="footer-site__content">
        <div class="container-md">
          <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="utility">
                <span class="utility__header"> About Us </span>
                <p class="footer-contacts__introduction">
                  With endless inspiration on women's fashion and understanding
                  the hassle of choosing the right outfit. Atlanta has always
                  wanted to bring every woman high-quality and impressive
                  products.
                </p>
                <div class="footer-social-media">
                  <span class="footer-social-media__title">Follow us: </span>
                  <a
                    href="#inta"
                    class="footer-social-media__link ti-instagram"
                  ></a>
                  <a
                    href="#faybuk"
                    class="footer-social-media__link ti-facebook"
                  ></a>
                  <a
                    href="#diutup"
                    class="footer-social-media__link ti-youtube"
                  ></a>
                </div>
              </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="utility">
                <span class="utility__header"> User Service </span>
                <ul class="utility__list">
                  <li class="utility__item">
                    <a href="#" class="utility__item--link"> Help Centre </a>
                  </li>
                  <li class="utility__item">
                    <a href="#" class="utility__item--link"> Careers </a>
                  </li>
                  <li class="utility__item">
                    <a href="#" class="utility__item--link"> Atlana Policy </a>
                  </li>
                  <li class="utility__item">
                    <a href="#" class="utility__item--link"> Flash Deals </a>
                  </li>
                  <li class="utility__item">
                    <a href="#" class="utility__item--link"> Store </a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="utility">
                <span class="utility__header">APP Download</span>
                <div class="app-download">
                  <img
                    src="./images/util/app_qr_code.png"
                    alt="qr code to download APP"
                    class="app-download__qr-code"
                  />
                  <div class="app-download__store">
                    <a href="#" class="app-download__store--link">
                      <img
                        src="./images/util/google-play-icon.png"
                        alt="gg play download"
                        class="app-download__store--img"
                      />
                    </a>
                    <a href="#" class="app-download__store--link">
                      <img
                        src="./images/util/app-store-icon.png"
                        alt="app-store-icon download"
                        class="app-download__store--img"
                      />
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
              <div class="utility">
                <span class="utility__header"> Subscribes </span>
                <div class="subscribe-form">
                  <span class="subscribe-form__header">
                    Please enter your email here to receive the latest fashion
                    trends and promotions from Atlana.
                  </span>
                  <form action="POST" class="subscribe-form__box">
                    <input
                      type="email"
                      name="email"
                      class="subscribe-form__box--field"
                      placeholder="Your email"
                      required
                    />
                    <button class="subscribe-form__box--btn">
                      <span class="ti-email"></span>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-site__copyright">
        <div class="container-md">
          <span class="footer-site__copyright--copyright">
            &copy;2023 Atlana Shop. All Rights Reserved.
          </span>
        </div>
      </div>
    </footer>
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script
      src="https://kit.fontawesome.com/0ef418b93e.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="/js/login.js"></script>
    <script type="module" src="/js/sign_up.js"></script>
  </body>
</html>
